<p><%= @trip.location %></p>
<ul>
  <% @trip.items.each do |item| %>
    <li><%= item.name %></li>
  <% end %>
</ul>
  

<%= form_for  ([@trip, @item]) do |f| %>
  
  <div class="field">
  	<%= f.label :name %>
  	<%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :item_type %>
    <%= f.select :item_type, Item.item_types.keys.to_a, include_blank: true %>
  </div>

  <div class="actions">
  	<%= f.submit %>
  </div>

<% end %>